/*第二个版本*/

page{
  height: 100%;
}
.img {
  border-radius: 50%;
  height: 100%;
  width: 100%;
}

.wrap-img {
  height: 150rpx;
  width: 150rpx;
}

.item {
  font-size: 34rpx;
  padding: 10rpx 0 10rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-desc {
  margin-left: 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  width: 500rpx;
  padding-bottom:10rpx;
  border-bottom:1rpx dotted #888888;

}

.item-desc-each {
  width: 100%;
}

.img-fontP {
  display: flex;
  align-items: flex-start;
  flex-wrap: nowrap;
}

.location-font {
  display: flex;
  align-items: baseline;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
